<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/rlSchemeDetailBottom"
              android:layout_width="match_parent"
              android:layout_height="?actionBarSize"
              android:layout_gravity="bottom"
              android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/toolbar_shadow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center">

        <TextView

            android:id="@+id/tvServer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:drawableLeft="@drawable/custom_server"
            android:drawablePadding="@dimen/dimen_5dp"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/custom_server"
            android:textSize="@dimen/sp_12"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/tvToCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whitesmoke"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/shopping_cart"
                android:textSize="@dimen/sp_12"/>

            <ImageView
                android:id="@+id/ivCirRed"
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_10dp"
                android:layout_gravity="right|end"
                android:layout_marginEnd="@dimen/dimen_15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:src="@drawable/shape_cir_red"
                android:visibility="gone"
                tools:ignore="RtlHardcoded"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvToBuy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorBlackGold"
            android:gravity="center"
            android:padding="@dimen/dimen_5dp"
            android:text="@string/to_buy"
            android:textColor="@color/chocolate"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvToAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="@dimen/dimen_5dp"
            android:text="@string/to_add"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"/>

    </LinearLayout>


</LinearLayout>
